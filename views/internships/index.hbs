<div class="row">
    {{#each internships}}
    <div class="col s12 m4">
        <div class="card">
            <div class="card-image">
               {{{editIcon user ../user _id}}}
            </div>
            <div class="card-content center-align">
                <h5>{{title}}</h5>
                <p>{{company}}</p>
        
                <div>
                    <p style="color: green;"><i class="fa-solid fa-check"></i>{{applied}}</p>
                </div>
            </div>
            <div class="card-action center-align">
                <a href="/internships/{{_id}}" class="btn grey">View</a>
                
            </div>
        </div>
    </div>
    {{else}}
    <p>No stories to display</p>
    {{/each}}
</div>