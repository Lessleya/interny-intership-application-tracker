<h3>Add Internship Application</h3>
<div class="row">
    <form action="/internships" method="POST" class="col s12">
        <div class="row">
            <div class="input-field">
                <input type="text" id="title" name="title">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="company" name="company">
                <label for="title">Company</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <input type="text" id="skills" name="skills">
                <label for="title">Skills</label>
            </div>
        </div>

          <div class="row">
            <div class="input-field">
                <input type="date" id="applicationDeadline" name="applicationDeadline" >
                <label for="title">Application Deadline</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <select id="applied" name="applied">
                    <option value="no" selected>No</option>
                    <option value="yes">Yes</option>
                </select>
                <label for="status">Application Submitted</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field">
                <h5>Description</h5>
                <textarea id="body" name="body"></textarea>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>
    </form>
</div>